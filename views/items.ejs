<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Items - Inventory Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .table-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        .badge-custom {
            font-size: 0.75em;
            padding: 4px 8px;
        }
        .qr-preview {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 4px;
            border: 1px solid #ddd;
        }
        .table th {
            background-color: #343a40;
            color: white;
            border: none;
            font-weight: 500;
            padding: 15px 10px;
        }
        .table td {
            vertical-align: middle;
            padding: 12px 10px;
            border-bottom: 1px solid #eee;
        }
        .table tbody tr:hover {
            background-color: #f8f9fa;
        }
        .unique-id {
            font-family: 'Courier New', monospace;
            font-size: 0.85em;
            background: #f8f9fa;
            padding: 2px 6px;
            border-radius: 4px;
            border: 1px solid #e9ecef;
        }
        @media (max-width: 768px) {
            .table-responsive {
                font-size: 0.85em;
            }
            .unique-id {
                font-size: 0.75em;
            }
        }
    </style>
</head>
<body class="bg-light">
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                
                <!-- Header Section -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2 class="text-primary mb-1">
                            <i class="fas fa-boxes"></i> All Items
                        </h2>
                        <p class="text-muted mb-0">Inventory Management System</p>
                    </div>
                    <div>
                        <a href="/" class="btn btn-success">
                            <i class="fas fa-plus"></i> Add New Item
                        </a>
                    </div>
                </div>

                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="text-primary"><%= items.length %></h5>
                                <small class="text-muted">Total Items</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="text-success">
                                    <%= items.filter(item => !item.date_decommissioned).length %>
                                </h5>
                                <small class="text-muted">Active Items</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="text-warning">
                                    <%= items.filter(item => item.date_decommissioned).length %>
                                </h5>
                                <small class="text-muted">Decommissioned</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="text-danger">
                                    <%= items.filter(item => item.hazard === 'High' || item.hazard === 'Critical').length %>
                                </h5>
                                <small class="text-muted">High Risk</small>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Search and Filter -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <input type="text" id="searchInput" class="form-control" 
                                       placeholder="ðŸ” Search items..." onkeyup="filterTable()">
                            </div>
                            <div class="col-md-3">
                                <select id="categoryFilter" class="form-select" onchange="filterTable()">
                                    <option value="">All Categories</option>
                                    <option value="Hardware">Hardware</option>
                                    <option value="Software">Software</option>
                                    <option value="Equipment">Equipment</option>
                                    <option value="Furniture">Furniture</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <select id="hazardFilter" class="form-select" onchange="filterTable()">
                                    <option value="">All Hazard Levels</option>
                                    <option value="None">None</option>
                                    <option value="Low">Low</option>
                                    <option value="Medium">Medium</option>
                                    <option value="High">High</option>
                                    <option value="Critical">Critical</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button onclick="clearFilters()" class="btn btn-outline-secondary w-100">
                                    <i class="fas fa-times"></i> Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Items Table -->
                <% if (items.length === 0) { %>
                    <div class="alert alert-info text-center" role="alert">
                        <i class="fas fa-info-circle fa-2x mb-3"></i>
                        <h5>No items found</h5>
                        <p class="mb-3">Get started by adding your first item to the inventory.</p>
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add First Item
                        </a>
                    </div>
                <% } else { %>
                    <div class="table-container">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0" id="itemsTable">
                                <thead>
                                    <tr>
                                        <th>QR</th>
                                        <th>Unique ID</th>
                                        <th>Type</th>
                                        <th>Department</th>
                                        <th>Serial No</th>
                                        <th>Category</th>
                                        <th>Hazard</th>
                                        <th>Data Sensitivity</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% items.forEach(function(item) { %>
                                        <tr>
                                            <!-- QR Code Preview -->
                                            <td>
                                                <% if (item.qr_code_path) { %>
                                                    <img src="<%= item.qr_code_path %>" 
                                                         alt="QR" 
                                                         class="qr-preview"
                                                         title="Click to view full item details">
                                                <% } else { %>
                                                    <i class="fas fa-qrcode text-muted" title="No QR code"></i>
                                                <% } %>
                                            </td>
                                            
                                            <!-- Unique ID -->
                                            <td>
                                                <span class="unique-id" title="<%= item.unique_id %>">
                                                    <%= item.unique_id.substring(0, 8) %>...
                                                </span>
                                            </td>
                                            
                                            <!-- Type -->
                                            <td><%= item.type %></td>
                                            
                                            <!-- Department -->
                                            <td><%= item.dept %></td>
                                            
                                            <!-- Serial Number -->
                                            <td>
                                                <code class="bg-light p-1 rounded"><%= item.serial_no %></code>
                                            </td>
                                            
                                            <!-- Category -->
                                            <td>
                                                <span class="badge bg-info badge-custom">
                                                    <% if (item.category === 'Hardware') { %>
                                                        <i class="fas fa-microchip"></i>
                                                    <% } else if (item.category === 'Software') { %>
                                                        <i class="fas fa-code"></i>
                                                    <% } else if (item.category === 'Equipment') { %>
                                                        <i class="fas fa-tools"></i>
                                                    <% } else if (item.category === 'Furniture') { %>
                                                        <i class="fas fa-chair"></i>
                                                    <% } else { %>
                                                        <i class="fas fa-cube"></i>
                                                    <% } %>
                                                    <%= item.category %>
                                                </span>
                                            </td>
                                            
                                            <!-- Hazard Level -->
                                            <td>
                                                <span class="badge badge-custom bg-<%= 
                                                    item.hazard === 'Critical' ? 'danger' :
                                                    item.hazard === 'High' ? 'danger' :
                                                    item.hazard === 'Medium' ? 'warning' :
                                                    item.hazard === 'Low' ? 'info' : 'success' 
                                                %>">
                                                    <%= item.hazard %>
                                                </span>
                                            </td>
                                            
                                            <!-- Data Sensitivity -->
                                            <td>
                                                <span class="badge badge-custom bg-<%= 
                                                    item.data_sensitivity === 'Restricted' ? 'danger' :
                                                    item.data_sensitivity === 'Confidential' ? 'warning' :
                                                    item.data_sensitivity === 'Internal' ? 'info' : 'success' 
                                                %>">
                                                    <%= item.data_sensitivity %>
                                                </span>
                                            </td>
                                            
                                            <!-- Status (Active/Decommissioned) -->
                                            <td>
                                                <% if (item.date_decommissioned) { %>
                                                    <span class="badge bg-warning text-dark badge-custom">
                                                        <i class="fas fa-calendar-times"></i>
                                                        Decommissioned
                                                    </span>
                                                    <small class="d-block text-muted">
                                                        <%= new Date(item.date_decommissioned).toLocaleDateString() %>
                                                    </small>
                                                <% } else { %>
                                                    <span class="badge bg-success badge-custom">
                                                        <i class="fas fa-check-circle"></i>
                                                        Active
                                                    </span>
                                                <% } %>
                                            </td>
                                            
                                            <!-- Actions -->
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="/item/<%= item.unique_id %>" 
                                                       class="btn btn-sm btn-outline-primary"
                                                       title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <% if (item.qr_code_path) { %>
                                                        <a href="/qr/<%= item.unique_id %>/png" 
                                                           class="btn btn-sm btn-outline-secondary"
                                                           title="Download QR PNG">
                                                            <i class="fas fa-qrcode"></i>
                                                        </a>
                                                    <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                <% } %>
                
                <!-- Footer -->
                <div class="text-center mt-4 text-muted">
                    <small>
                        <i class="fas fa-info-circle"></i>
                        Total: <%= items.length %> items | 
                        Last updated: <%= new Date().toLocaleString() %>
                    </small>
                </div>
                
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Filter and search functionality
        function filterTable() {
            const searchInput = document.getElementById('searchInput').value.toLowerCase();
            const categoryFilter = document.getElementById('categoryFilter').value;
            const hazardFilter = document.getElementById('hazardFilter').value;
            const table = document.getElementById('itemsTable');
            const rows = table.getElementsByTagName('tr');
            
            // Skip header row (index 0)
            for (let i = 1; i < rows.length; i++) {
                const row = rows[i];
                const cells = row.getElementsByTagName('td');
                
                if (cells.length > 0) {
                    const uniqueId = cells[1].textContent.toLowerCase();
                    const type = cells[2].textContent.toLowerCase();
                    const dept = cells[3].textContent.toLowerCase();
                    const serial = cells[4].textContent.toLowerCase();
                    const category = cells[5].textContent;
                    const hazard = cells[6].textContent;
                    
                    // Search filter (checks multiple fields)
                    const searchMatch = searchInput === '' || 
                        uniqueId.includes(searchInput) ||
                        type.includes(searchInput) ||
                        dept.includes(searchInput) ||
                        serial.includes(searchInput);
                    
                    // Category filter
                    const categoryMatch = categoryFilter === '' || category.includes(categoryFilter);
                    
                    // Hazard filter
                    const hazardMatch = hazardFilter === '' || hazard.includes(hazardFilter);
                    
                    // Show/hide row based on all filters
                    if (searchMatch && categoryMatch && hazardMatch) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                }
            }
            
            updateFilterCount();
        }
        
        function clearFilters() {
            document.getElementById('searchInput').value = '';
            document.getElementById('categoryFilter').value = '';
            document.getElementById('hazardFilter').value = '';
            filterTable();
        }
        
        function updateFilterCount() {
            const table = document.getElementById('itemsTable');
            const rows = table.getElementsByTagName('tr');
            let visibleCount = 0;
            
            // Count visible rows (skip header)
            for (let i = 1; i < rows.length; i++) {
                if (rows[i].style.display !== 'none') {
                    visibleCount++;
                }
            }
            
            // Update count display if needed
            console.log(`Showing ${visibleCount} of <%= items.length %> items`);
        }
        
        // Initialize tooltips if Bootstrap tooltips are needed
        document.addEventListener('DOMContentLoaded', function() {
            // Add click handlers for QR code previews
            const qrPreviews = document.querySelectorAll('.qr-preview');
            qrPreviews.forEach(img => {
                img.style.cursor = 'pointer';
                img.addEventListener('click', function() {
                    // Extract unique_id from the image src
                    const src = this.src;
                    const uniqueId = src.match(/\/qr\/([^\/]+)\.png/)[1];
                    window.open(`/item/${uniqueId}`, '_blank');
                });
            });
        });
    </script>
</body>
</html>