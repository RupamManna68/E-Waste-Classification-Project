<div class="p-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="text-primary mb-1">
                <i class="fas fa-boxes"></i> <%= typeof title !== 'undefined' ? title : 'E-Waste Items' %>
            </h5>
            <p class="text-muted mb-0">Total: <%= items.length %> items</p>
        </div>
        <% if (typeof showAddButton === 'undefined' || showAddButton) { %>
            <a href="/ewaste/" class="btn btn-success btn-sm" target="_blank">
                <i class="fas fa-plus"></i> Add New Item
            </a>
        <% } %>
    </div>

    <% if (items.length === 0) { %>
        <div class="text-center py-5">
            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
            <h5>No items found</h5>
            <p class="text-muted">Start by adding your first e-waste item.</p>
            <a href="/ewaste/" class="btn btn-primary" target="_blank">
                <i class="fas fa-plus"></i> Add First Item
            </a>
        </div>
    <% } else { %>
        <!-- Quick Stats -->
        <div class="row mb-4">
            <div class="col-md-3 col-6">
                <div class="card bg-light text-center">
                    <div class="card-body py-2">
                        <h6 class="text-primary"><%= items.length %></h6>
                        <small class="text-muted">Total</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-light text-center">
                    <div class="card-body py-2">
                        <h6 class="text-success">
                            <%= items.filter(item => !item.date_decommissioned).length %>
                        </h6>
                        <small class="text-muted">Active</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-light text-center">
                    <div class="card-body py-2">
                        <h6 class="text-warning">
                            <%= items.filter(item => item.date_decommissioned).length %>
                        </h6>
                        <small class="text-muted">Decommissioned</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-light text-center">
                    <div class="card-body py-2">
                        <h6 class="text-danger">
                            <%= items.filter(item => item.hazard === 'High' || item.hazard === 'Critical').length %>
                        </h6>
                        <small class="text-muted">High Risk</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Items List -->
        <div style="max-height: 400px; overflow-y: auto;">
            <% items.slice(0, 10).forEach(function(item) { %>
                <div class="card mb-2 border-start border-3 border-<%= 
                    item.hazard === 'Critical' || item.hazard === 'High' ? 'danger' :
                    item.hazard === 'Medium' ? 'warning' :
                    item.hazard === 'Low' ? 'info' : 'success' 
                %>">
                    <div class="card-body py-2">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h6 class="mb-1">
                                    <i class="fas fa-box text-primary"></i>
                                    <%= item.type %> - <%= item.serial_no %>
                                </h6>
                                <p class="mb-1 text-muted">
                                    <small>
                                        <i class="fas fa-fingerprint"></i> <%= item.unique_id.substring(0, 8) %>...
                                        <i class="fas fa-building ms-2"></i> <%= item.dept %>
                                        <i class="fas fa-calendar ms-2"></i> <%= new Date(item.created_at).toLocaleDateString() %>
                                    </small>
                                </p>
                                <div>
                                    <span class="badge bg-info badge-sm me-1">
                                        <% if (item.category === 'Hardware') { %>
                                            <i class="fas fa-microchip"></i>
                                        <% } else if (item.category === 'Software') { %>
                                            <i class="fas fa-code"></i>
                                        <% } else if (item.category === 'Equipment') { %>
                                            <i class="fas fa-tools"></i>
                                        <% } else if (item.category === 'Furniture') { %>
                                            <i class="fas fa-chair"></i>
                                        <% } else { %>
                                            <i class="fas fa-cube"></i>
                                        <% } %>
                                        <%= item.category %>
                                    </span>
                                    <span class="badge bg-<%= 
                                        item.hazard === 'Critical' || item.hazard === 'High' ? 'danger' :
                                        item.hazard === 'Medium' ? 'warning' :
                                        item.hazard === 'Low' ? 'info' : 'success' 
                                    %> badge-sm me-1">
                                        <%= item.hazard %>
                                    </span>
                                    <span class="badge bg-<%= 
                                        item.data_sensitivity === 'Restricted' ? 'danger' :
                                        item.data_sensitivity === 'Confidential' ? 'warning' :
                                        item.data_sensitivity === 'Internal' ? 'info' : 'success' 
                                    %> badge-sm">
                                        <%= item.data_sensitivity %>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-4 text-md-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="/ewaste/item/<%= item.unique_id %>" 
                                       class="btn btn-outline-primary btn-sm" 
                                       target="_blank" 
                                       title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <% if (item.qr_code_path) { %>
                                        <a href="/ewaste/qr/<%= item.unique_id %>/png" 
                                           class="btn btn-outline-secondary btn-sm"
                                           target="_blank"
                                           title="Download QR">
                                            <i class="fas fa-qrcode"></i>
                                        </a>
                                    <% } %>
                                    <button class="btn btn-outline-info btn-sm" 
                                            onclick="copyItemUrl('<%= item.unique_id %>')" 
                                            title="Copy Link">
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </div>
                                <% if (item.date_decommissioned) { %>
                                    <div class="mt-1">
                                        <span class="badge bg-warning text-dark badge-sm">
                                            <i class="fas fa-calendar-times"></i>
                                            Decommissioned
                                        </span>
                                    </div>
                                <% } else { %>
                                    <div class="mt-1">
                                        <span class="badge bg-success badge-sm">
                                            <i class="fas fa-check-circle"></i>
                                            Active
                                        </span>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <% if (items.length > 10) { %>
            <div class="text-center mt-3">
                <a href="/ewaste/items" target="_blank" class="btn btn-outline-primary">
                    <i class="fas fa-external-link-alt"></i> 
                    View All <%= items.length %> Items
                </a>
            </div>
        <% } %>
    <% } %>
</div>

<script>
    function copyItemUrl(uniqueId) {
        const url = `${window.location.origin}/ewaste/item/${uniqueId}`;
        navigator.clipboard.writeText(url).then(() => {
            // Simple feedback
            const btn = event.target.closest('button');
            const originalHtml = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-check"></i>';
            btn.classList.add('btn-success');
            btn.classList.remove('btn-outline-info');
            
            setTimeout(() => {
                btn.innerHTML = originalHtml;
                btn.classList.remove('btn-success');
                btn.classList.add('btn-outline-info');
            }, 2000);
        });
    }
</script>